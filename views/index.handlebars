<div id="wrapper">

<div id="burger">
<img src="assets/img/hamburger.jpg" alt="burger">
<h1>Eat-Da-Burger!</h1>
</div>

<div id="toEat">
<h2>Burgers ready to eat</h2>
<ul>
  {{#each burgers}}
  {{#unless devoured}}
  <p>
    {{this.id}}. {{this.burger_name}}
    <button data-burgerid="{{this.id}}" class="delburger">Devour it!</button>
  </p>
  {{/unless}}
  {{/each}}
</ul>
</div>

<div id="eaten">
<h2>Already Eaten</h2>
<ul>
  {{#each burgers}}
  {{#if devoured}}
  <p>
    {{this.id}}. {{this.burger_name}}
  </p>
  {{/if}}
  {{/each}}
</ul>
</div>

<form class="create-form">
  <div class="form-group">
    <label for="bn"></label>
    <input type="text" id="bn" name="name">
  <button type="submit">Submit</button>
  <h4>Enter the burger your heart desires and then click the submit button!</h4>
  </div>
</form>

</div>